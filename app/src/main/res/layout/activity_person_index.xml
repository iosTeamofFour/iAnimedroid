<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.PersonIndexActivity">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="280dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/backgroundView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/avatar"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@+id/backgroundView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="zoom"
            android:paddingStart="16dp"
            android:id="@+id/nickName"
            android:background="@color/WhiteText"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/backgroundView"
            app:layout_constraintStart_toEndOf="@+id/textView5"/>
    <TextView
            android:text="TextView"
            android:textSize="24dp"
            android:paddingStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/WhiteText"
            android:id="@+id/textView5" tools:text="昵称" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/backgroundView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:textSize="24dp"
            android:background="@color/WhiteText"
            android:id="@+id/signature"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nickName"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:text="开心每一天"/>

    <TextView
            android:text="个性签名"
            android:textSize="24dp"
            android:paddingStart="16dp"
            android:background="@color/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/signature"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="男"
            android:paddingStart="16dp"
            android:background="@color/WhiteText"
            android:textSize="24dp"
            android:id="@+id/sex"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/signature" android:hint="男"
            app:layout_constraintStart_toEndOf="@+id/textView7"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="2000-1-1"
            android:background="@color/WhiteText"
            android:textSize="24dp"
            android:paddingStart="16dp"
            android:id="@+id/birthday"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sex"
            app:layout_constraintStart_toEndOf="@+id/textView8"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"

            android:id="@+id/tel"
            android:textSize="24dp"
            android:paddingStart="16dp"
            android:background="@color/WhiteText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/birthday" android:text="15521332133"
            app:layout_constraintStart_toEndOf="@+id/textView9"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp" app:srcCompat="@mipmap/arrow_right"
            android:id="@+id/arrow_right1"
            app:layout_constraintEnd_toEndOf="@+id/nickName" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/nickName"/>
    <TextView
            android:text="性别"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:paddingStart="16dp"
            android:background="@color/WhiteText"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sex"/>
    <TextView
            android:text="生日"
            android:textSize="24dp"
            android:paddingStart="16dp"
            android:background="@color/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/birthday"/>
    <TextView
            android:text="绑定手机"
            android:textSize="24dp"
            android:paddingStart="16dp"
            android:background="@color/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tel"/>


</androidx.constraintlayout.widget.ConstraintLayout>